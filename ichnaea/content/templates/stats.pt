<tal:macro xmlns:tal="http://xml.zope.org/namespaces/tal"
           xmlns:metal="http://xml.zope.org/namespaces/metal"
           metal:use-macro="view.base_template">

<tal:slot metal:fill-slot="js">
    <script src="/static/js/bundle-stat.js"></script>
</tal:slot>

<tal:slot metal:fill-slot="content">
<section id="main-content">
    <p>
        This page shows global statistics.
    </p>

    <div class="separator">
    <table class="table half-left">
        <thead>
            <tr>
                <th>Metric</th>
                <th class="text-right">Value (in millions)</th>
            </tr>
        </thead>
        <tbody>
            <tr tal:repeat="row metrics1">
                <td>${row.name}</td>
                <td class="text-right">${row.value}</td>
            </tr>
        </tbody>
    </table>

    <table class="table half-right">
        <thead>
            <tr>
                <th>Metric</th>
                <th class="text-right">Value (in millions)</th>
            </tr>
        </thead>
        <tbody>
            <tr tal:repeat="row metrics2">
                <td>${row.name}</td>
                <td class="text-right">${row.value}</td>
            </tr>
        </tbody>
    </table>
    </div>

    <p class="separator"></p>

    <h3>Bluetooth networks</h3>

    <p>
        Shows unique logical Bluetooth Low Energy (BLE) networks.
    </p>

    <div id="blue_chart" class="chart_container">
        <div class="chart"></div>
    </div>

    <p class="separator"></p>

    <h3>Cell networks</h3>

    <p>
        Shows unique logical cell networks.
    </p>

    <div id="cell_chart" class="chart_container">
        <div class="chart"></div>
    </div>

    <p class="separator"></p>

    <h3>WiFi networks</h3>

    <p>
        Shows unique logical WiFi networks.
    </p>

    <div id="wifi_chart" class="chart_container">
        <div class="chart"></div>
    </div>
</section>
</tal:slot>

</tal:macro>
