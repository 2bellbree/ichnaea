<tal:macro xmlns:tal="http://xml.zope.org/namespaces/tal"
           xmlns:metal="http://xml.zope.org/namespaces/metal"
           metal:use-macro="view.base_template">

<tal:slot metal:fill-slot="css">
    <link rel="stylesheet" href="/static/mapbox.css" />
</tal:slot>

<tal:slot metal:fill-slot="js">
    <script src='/static/mapbox.js'></script>
    <script src="/static/csv2geojson.js"></script>
    <script src="/static/leaflet.markercluster.js"></script>
</tal:slot>

<tal:slot metal:fill-slot="content">
<section id="main-content">
    <p>
        A map showing all covered areas. A single marker shows that we
        have at least one measurement somewhere in a 1km radius around
        the marker.
    </p>
    <div id='map'></div>
</section>
</tal:slot>

<tal:slot metal:fill-slot="js_bottom">
<script type='text/javascript'>
var map = L.mapbox.map('map', 'hannosch.map-j01ew28b').setView([0, 0], 2);
var markers = new L.MarkerClusterGroup();
$.ajax({
    url: '/map.csv',
    dataType: 'text',
    success: function csvLoad(csv) {
        geoJsonLayer = L.geoJson(csv2geojson.csv2geojson(csv), {
            onEachFeature: function (feature, layer) {
                layer.bindPopup(feature.properties.address);
            }
        });
        markers.addLayer(geoJsonLayer);
        map.addLayer(markers);
        map.fitBounds(markers.getBounds());
    }
});
</script>
</tal:slot>

</tal:macro>
