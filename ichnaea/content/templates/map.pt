<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <title>Mozilla Location Service - Map</title>

  <link rel="stylesheet" href="/static/css/base.css" />
  <link rel="stylesheet" href="/static/mapbox.css" />

  <script src='/static/jquery.min.js'></script>
  <script src='/static/mapbox.js'></script>
  <script src="/static/csv2geojson.js"></script>
  <script src="/static/leaflet.markercluster.js"></script>
</head>
<body>

<div id="outer-wrapper">

<div id="wrapper">
    <header id="masthead">
        <nav id="nav-main" role="navigation">
            <ul id="nav-main-menu">
                <li class="first"><a href="/">Home</a></li>
                <li><a href="/stats">Statistics</a></li>
                <li class="last"><a href="/map">Map</a></li>
            </ul>
        </nav>

        <h2><a href="/">Mozilla Location Service</a></h2>
    </header>
</div>

<h1 id="main-feature">Coverage Map</h1>

<section id="main-content">
    <p>
        A map showing all covered areas. A single marker shows that we
        have at least one measurement somewhere in a 1km radius around
        the marker.
    </p>
    <div id='map'></div>
</section>

<footer id="colophon">
    <div class="footer-logo">
        <img src="/static/images/mozilla-logo.png" alt="Mozilla" />
    </div>
    <div class="footer-license">
        This content is ©2012–2013 by Mozilla.
    </div>

    <ul class="footer-nav">
        <li><a href="https://wiki.mozilla.org/Services/Location">
            Project overview</a>
        </li>
        <li><a href="https://github.com/mozilla/ichnaea/">
            Source Code</a>
        </li>
    </ul>
</footer>

</div>

<script type='text/javascript'>
var map = L.mapbox.map('map', 'hannosch.map-j01ew28b').setView([0, 0], 2);
var markers = new L.MarkerClusterGroup();
$.ajax({
    url: '/v1/map_stats',
    dataType: 'text',
    success: function csvLoad(csv) {
        geoJsonLayer = L.geoJson(csv2geojson.csv2geojson(csv), {
            onEachFeature: function (feature, layer) {
                layer.bindPopup(feature.properties.address);
            }
        });
        markers.addLayer(geoJsonLayer);
        map.addLayer(markers);
        map.fitBounds(markers.getBounds());
    }
});
</script>
</body>
</html>
